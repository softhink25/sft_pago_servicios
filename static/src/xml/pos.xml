            <div class="popup" style="height: 250px;width:650px;">
                <p class="title" id="titulo_selec_serv">Seleccione el servicio a pagar</p>

                 <select style="margin:13px; font-size:15px; max-width:500px;       display:none;" id="combobox" placeholder="Seleccionar Servicio">        <!-- para usar el TODO COMBOBOX se agrega  display:none;   -->


                 </select>
                <!-- TODO COMBOBOX-->

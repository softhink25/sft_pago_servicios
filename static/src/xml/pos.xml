                <p class="subtitle">
                    Saldo disponible: $<span id="saldo_disp">00.00</span>
                </p>

                <div class="footer">
                    <div class="button ok_selected" >
                        Continuar
                    </div>
                    <div class="button cancel">
                        Cancelar
                    </div>
                </div>
            </div>
        </div>
    </t>


    <t t-name="DetallesDePago">
        <div class="modal-dialog">
            <div class="popup" style="height:570px; width:620px;">
                <p class="title" id="titulo_detalles_de_pago">Datos requeridos</p>


                <div class="content-container" style="float: left; margin-left: 25px; width:90%;">
                     <div style="padding:14px; width: 100%; text-align: center;">
                        <span style="display: inline-block; margin:7px; font-size:20px; font-style:italic;">Nombre del servicio: </span>
                        <span id="nom_producto" style="display: inline-block;">Saldo telcel</span>
                     </div><br></br>

                     <div disabled="true" style="float:left; padding:10px; display: flex; width:100%;">
                        <span class="label_monto" style="margin: 7px;font-size: 20px;font-style: italic;min-width:100px; ">Monto </span>
                        <input disabled="true" class="input_monto" type="text" name="input_monto" style="width:50%;"></input>

                         <div style="float:center; width: auto; padding:10px; display: flex; ">
                            <span class="comision" value="0" style="font-size: 20px;font-style: italic;">Comision $0</span>
                         </div>
                     </div><br></br>


                     <div style="float:left; padding:10px; display: flex; width:96%;">
                        <span class="label_ref" style="display:none; margin:7px; font-size:20px; font-style: italic; min-width:100px;">Referencia </span>
                        <input  class="input_ref" type="text" name="input_ref" style="display: none; width:100%;"></input>
                     </div><br></br>

                    <div style="float:left; padding:10px; display: flex; width: 96%">
                        <span class="label_telefono" style="display:none; margin:7px; font-size:20px; font-style:italic;min-width:100px;">Telefono </span>
                        <input class="input_telefono" type="text" style="display: none; width: 100%" name="input_tel"></input>
                     </div><br></br>

                    <div style="float:left; padding:10px; display: flex; width: 96%;">
                        <span style="margin: 7px;font-size: 20px;font-style: italic; text-align:center; min-width:100px;max-width:100px;">Importe </span>
                        <span id="importe_a_pagar"  class="popup-input " style="font-size: 20px;font-style: bold;width:100%;">$0</span>

                     </div><br></br>

                    <div class="content-container ">
	                   <p style="margin: 7px;font-size: 14px;">Mensaje.</p>
                       <textarea type="text" class="no_mensaje" readonly="true" style="width:92%;"></textarea>
                    </div>
                </div>

                <div class="footer">
                    <div class="button ok_detalles">
                        Continuar
                    </div>
                    <div class="button cancel">
                        Cancelar
                    </div>
                </div>
            </div>
        </div>
    </t>







</templates>
